#include <stdio.h>

int main() {
    int opcao;
    float a, b, resultado;

    printf("Escolha a operação:\n");
    printf("1. Soma\n2. Subtração\n3. Multiplicação\n4. Divisão\n");
    printf("Digite a opção: ");
    scanf("%d", &opcao);

    printf("Digite dois valores: ");
    scanf("%f %f", &a, &b);

    switch(opcao) {
        case 1:
            resultado = a + b;
            printf("Resultado: %.2f\n", resultado);
            break;
        case 2:
            resultado = a - b;
            printf("Resultado: %.2f\n", resultado);
            break;
        case 3:
            resultado = a * b;
            printf("Resultado: %.2f\n", resultado);
            break;
        case 4:
            if(b != 0)
                resultado = a / b;
            else {
                printf("Erro: Divisão por zero!\n");
                return 1;
            }
            printf("Resultado: %.2f\n", resultado);
            break;
        default:
            printf("Opção inválida!\n");
    }

    return 0;
}
